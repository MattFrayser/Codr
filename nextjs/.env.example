# ============================================================================
# Codr Frontend Environment Configuration
# Copy this file to .env.local for local development
# ============================================================================

# Backend API URL (no trailing slash)
# Points to the FastAPI backend server
API_URL=http://localhost:8000

# API Key for authentication (must match backend)
# This should be kept secret and match the backend API_KEY
API_KEY=dev-secret-key-123

# Allowed origins for CSRF protection (comma-separated)
# Only required in production when NODE_ENV=production
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Enable API request/error logging (true/false)
# Logs detailed error information to console
ENABLE_API_LOGGING=false
