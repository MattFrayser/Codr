
# ============================================================================
# Server Configuration
# ============================================================================

# Environment mode: "development" or "production"
# Affects error verbosity, Redis defaults, and security checks
ENV=development

# Server host and port
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Security & Authentication
# ============================================================================

# API Key for authentication (required in production)
API_KEY=dev-secret-key-123

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate limiting configuration
# Format: requests/time_unit (e.g., "10/minute", "100/hour")
RATE_LIMIT_SUBMIT=10/minute
RATE_LIMIT_STREAM=30/minute

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis connection URL (required in production, defaults to localhost in dev)
# Format: redis://[[username]:password@]host[:port][/database]
REDIS_URL=redis://localhost:6379/0

# Redis TTL for job data (in seconds)
REDIS_TTL=3600

# ============================================================================
# Code Execution Configuration
# ============================================================================

# Execution timeout (seconds)
EXECUTION_TIMEOUT=7

# Maximum memory per execution (MB)
MAX_MEMORY_MB=300

# Maximum output file size (MB)
MAX_FILE_SIZE_MB=1

# Maximum time for compiling C/C++/Rust code (seconds)
COMPILATION_TIMEOUT=10

# ============================================================================
# Polling Configuration
# ============================================================================

# Maximum number of polling attempts for job status
MAX_POLL_ATTEMPTS=60

# Time between status checks in SSE streaming (seconds)
POLL_INTERVAL=1

